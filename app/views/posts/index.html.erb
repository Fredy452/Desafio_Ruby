<div class="container-fluid">
  <h1>Lista de posts</h1>

  <table class="table table">
    <thead>
      <tr>
        <th scope="col">Tituo</th>
        <th scope="col">Contenido</th>
        <th scope="col">Imagen</th>
        <th colspan="3" scope="col"></th>
      </tr>
    </thead>

    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td scope="row"><%= post.title %></td>
          <td scope="row"><%= post.content %></td>
          <td scope="row"><%= link_to image_tag(post.image, style:"width:50px; heigth:50px"), post.image %></td>
          <td scope="row"><%= link_to "Show", post %></td>
          <td scope="row"><%= link_to "Edit", edit_post_path(post) %></td>
          <td scope="row"><%= link_to "Destroy", post, data: { turbo_method: :delete, turbo_confirm: "Estas seguro?" } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to  "Agregar nuevo posts", new_post_path %>

</div>
