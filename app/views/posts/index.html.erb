<h1>Lista de posts</h1>

<table>
  <thead>
    <tr>
      <th>Tituo</th>
      <th>Contenido</th>
      <th>Imagen</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.content %></td>
        <td><%= link_to image_tag(post.image, style:"width:50px; heigth:50px"), post.image %></td>
        <td><%= link_to "Show", post %></td>
        <td><%= link_to "Edit", edit_post_path(post) %></td>
        <td><%= link_to "Destroy", post, data: { turbo_method: :delete, turbo_confirm: "Estas seguro?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to "Agregar nuevo posts", new_post_path %>
