<div id="<%= dom_id post %>">

  <p>
    <strong>Title:</strong>
    <%= post.title %>
  </p>

  <p>
    <strong>Content:</strong>
    <%= post.content %>
  </p>

  <p>
    <strong>Image:</strong>
      <%= link_to image_tag(post.image, style:"width:150px; heigth:150px"), post.image %>
  </p>


</div>
