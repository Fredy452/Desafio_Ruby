<!-- Media object -->
<div class="d-flex">
  <div class="flex-shrink-0">
    <%= link_to image_tag(@post.image, style:"width:150px", class:"media-object", alt:"@posts.title"), @post.image %>
  </div>
  <div class="flex-grow-1 ms-3">
  <%= @post.content %>
 </div>
</div>

<h2 class="display-6">Lista de Productos</h2>
<div class="card-group">
  <% @posts.each do |post| %>
  <div class="card" style="width: 18rem;">
    <img <%= link_to image_tag(post.image, style:"width:200px; heigth:200px", class:"card-img-top"), post.image %>
    <div class="card-body">
      <h5 class="card-title"><%=post.title %></h5>
      <p class="col-2 text-truncate"><%=post.content %></p>
      <a href="#" class=" btn btn-primary">Go somewhere</a>
    </div>
  </div>
  <% end %>
</div>

